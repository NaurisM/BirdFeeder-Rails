<div class="card" style="width: 40rem; margin: auto;">
  <%= image_tag(@bird.image) %>
  <div class="card-body">
    <h3 class="card-title">
      <%= @bird.name %>
    </h3>
    <%= link_to 'Edit', edit_bird_path(@bird), class:"btn btn-warning btn-sm me-2" %> 
    <%= link_to 'Back', birds_path, class:"btn btn-warning btn-sm" %>
  </div>
</div>