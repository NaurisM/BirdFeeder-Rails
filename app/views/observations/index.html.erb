<% if user_signed_in? %>

  <h2>My Observations</h2>

  <table class="table table-bordered table-sm table-striped">
    <thead class="table-dark">
      <tr>
        <th>Season</th>
        <th>Name</th>
        <th>Max number</th>
        <th>Notes</th>
      </tr>
    </thead>

    <tbody>
      <% @observations.each do |observation| %>
        <% if observation.user == current_user %>
        <tr>
          <td><%= observation.season %></td>
          <td><%= link_to observation.name, observation %></td>
          <td><%= observation.max_number %></td>
          <td><%= observation.notes %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Add Observation', new_observation_path, class:"btn btn-warning btn-lg" %>

<% else %>
<div class="container">
    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
    <div class="carousel-inner" style="padding:0;max-width:100%;height:auto;">
      <div class="carousel-item active">
        <%= image_tag("feeder1") %>
      </div>
      <div class="carousel-item">
        <%= image_tag("feeder2") %>
      </div>
      <div class="carousel-item">
        <%= image_tag("feeder3") %>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>
<% end %>
