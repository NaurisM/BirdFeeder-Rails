<div class="card" style="width: 40rem; margin: auto;">
  <% 
    @bird_id = Bird.where(name: @observation.name).ids 
    @bird_img = Bird.find(@bird_id[0]).image
  %>
  <%= image_tag( @bird_img ) %>
  <div class="card-body">
    <h3 class="card-title">
      <%= @observation.name %>
    </h3>
    <%= link_to 'Edit', edit_observation_path(@observation), class:"btn btn-warning btn-sm me-2" %> 
    <%= link_to 'Back', observations_path, class:"btn btn-warning btn-sm" %>
  </div>
</div>